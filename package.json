{
  "name": "naga-coin",
  "version": "1.0.0",
  "private": true,
  "dependencies": {
    "zeppelin-solidity": "^1.4.0"
  },
  "devDependencies": {
    "ethereumjs-abi": "^0.6.4",
    "ethereumjs-testrpc": "^6.0.1",
    "truffle-core": "^4.0.1"
  },
  "scripts": {
    "compile": "truffle compile",
    "deploy-dev": "truffle exec scripts/deploy.js",
    "deploy-ropsten": "truffle exec --network ropsten scripts/deploy.js",
    "deploy-main": "truffle exec --network main scripts/deploy.js",
    "mint-dev": "truffle exec scripts/mint.js",
    "mint-ropsten": "truffle exec --network ropsten scripts/mint.js",
    "mint-main": "truffle exec --network main scripts/mint.js",
    "finish-dev": "truffle exec scripts/finish.js",
    "finish-ropsten": "truffle exec --network ropsten scripts/finish.js",
    "finish-main": "truffle exec --network main scripts/finish.js",
    "transfer-dev": "truffle exec scripts/transfer.js",
    "transfer-ropsten": "truffle exec --network ropsten scripts/transfer.js",
    "transfer-main": "truffle exec --network main scripts/transfer.js",
    "testrpc": "testrpc -i 42 -p 8888",
    "test": "truffle test"
  }
}
